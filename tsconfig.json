{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "module": "umd",
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*",
  ]
}